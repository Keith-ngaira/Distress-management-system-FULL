{
  "name": "distress-management-system",
  "version": "1.0.0",
  "description": "A comprehensive web application for managing and responding to distress messages and emergency cases",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "start": "npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && npm test",
    "test-db": "cd backend && npm run test-db"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Keith-ngaira/Distress-management-system-FULL.git"
  },
  "keywords": [
    "distress-management",
    "emergency-response",
    "react",
    "nodejs",
    "mysql"
  ],
  "author": "Keith Ngaira",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
